FROM requirements

# Create the directory where models will be stored
RUN mkdir -p /models/huggingface/sentence-transformers/all-mpnet-base-v2

# Copy the script similarity.py to the container
COPY model/similarity.py /app/similarity.py
COPY model/models/huggingface/sentence-transformers/all-mpnet-base-v2 /models/huggingface/sentence-transformers/all-mpnet-base-v2

# Set the working directory
WORKDIR /app

# Specify the default command to run when starting the container
CMD ["python", "similarity.py"]
